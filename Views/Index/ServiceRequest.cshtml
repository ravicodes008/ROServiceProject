@model ROServiceProject.Models.ServiceRequestModel

@{
    ViewBag.Title = "Place Service Request";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8">

            <div style="margin-top:50px" class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4><i class="fas fa-tools"></i> Place Service Request</h4>
                </div>

                <div class="card-body">

                    @if (ViewBag.ErrorMessage != null)
                    {
                        <div class="alert alert-danger">
                            @ViewBag.ErrorMessage
                        </div>
                    }
                    @if (ViewBag.SuccessMessage != null)
                    {
                        <div class="alert alert-warning">
                            @ViewBag.SuccessMessage
                        </div>
                    }

                    <form method="post" action="@Url.Action("ServiceRequest","Home")">

                        @Html.AntiForgeryToken()

                        <!-- Customer Name -->
                        <div class="form-group">
                            <label>Customer Name</label>
                            <input type="text" name="Name" class="form-control" placeholder="Enter your full name" required />
                        </div>

                        <!-- Mobile -->
                        <div class="form-group">
                            <label>Mobile Number</label>
                            <input type="text" name="Mobile"
                                   maxlength="10"
                                   class="form-control"
                                   placeholder="10 digit mobile number"
                                   required />
                        </div>

                        <!-- Address -->
                        <div class="form-group">
                            <label>Address</label>
                            <textarea name="Address"
                                      class="form-control"
                                      rows="3"
                                      placeholder="Enter complete address"
                                      required></textarea>
                        </div>

                        <!-- Problem -->
                        <div class="form-group">
                            <label>Problem Description</label>
                            <textarea name="ProblemDescription"
                                      class="form-control"
                                      rows="4"
                                      placeholder="Describe the issue"></textarea>
                        </div>

                        <div class="alert alert-info">
                            Our service team will contact you within 24 hours.
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-primary btn-lg">
                                Submit Request
                            </button>

                            <a href="@Url.Action("Index","Home")"
                               class="btn btn-secondary btn-lg ml-2">
                                Cancel
                            </a>
                        </div>

                    </form>

                </div>
            </div>

        </div>
    </div>
</div>

<script>
    // Allow only numbers in mobile
    document.querySelector('[name="Mobile"]').addEventListener('input', function () {
        this.value = this.value.replace(/[^0-9]/g, '');
    });
</script>
